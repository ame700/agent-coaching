{
    "manifest_version": 3,
    "name": "Genesys AI Bot Toggle",
    "version": "1.0",
    "description": "Toggle AI bot status in Genesys topbar",
    "permissions": [
        "activeTab",
        "scripting"
      ],
    "host_permissions": [
      "https://apps.mec1.pure.cloud/*"
    ],
    "content_scripts": [
      {
        "matches":["https://apps.mec1.pure.cloud/*"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["icon.png", "icon-on.png", "icon-off.png" ,"icon-talking.png"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  